<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Material.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="background">@color/colorAccent</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.RoundedButton" parent="AppTheme.Button">
        <item name="background">@drawable/bg_rounded_accent</item>
        <item name="android:background">@drawable/bg_rounded_accent</item>
    </style>

    <style name="AppTheme.TextView" parent="android:Widget.Material.TextView">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextView.Bold" parent="AppTheme.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView.Title" parent="AppTheme.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.Title</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar.Navigation" parent="AppTheme.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_white</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>

</resources>
